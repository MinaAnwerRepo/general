<Window x:Class="Attaindance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attaindance"
        mc:Ignorable="d"
        Title="MainWindow" Height="161.184" Width="243.648" WindowStyle="ThreeDBorderWindow" Icon="Time.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txt_time" HorizontalAlignment="Left" Height="45" Margin="19,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Grid.ColumnSpan="2" IsEnabled="False" FontSize="22" FontFamily="Snap ITC" TextAlignment="Center"/>
        <Button Name="Login_name" Content="Login"  Style="{StaticResource BaseButtonStyle}" HorizontalAlignment="Left" Margin="19,83,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.589,-1.193" Click="Login_name_Click" />
        <Button Name="Logout_name" Content="Logout"  Style="{StaticResource BaseButtonStyle}" HorizontalAlignment="Left" Margin="0,83,0,0" VerticalAlignment="Top" Width="75" Click="Logout_name_Click" Grid.Column="1" RenderTransformOrigin="0.618,0.474"/>
    </Grid>
</Window>
